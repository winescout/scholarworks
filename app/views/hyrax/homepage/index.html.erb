                <li><a href="https://digitallibrary.sdsu.edu/" target="_blank" class="external">San Diego</a></li>
                <li><%= link_to "San Francisco", "catalog?f[campus_sim][]=San Francisco" %></li>
                <li><a href="https://scholarworks.sjsu.edu/" target="_blank" class="external">San Jose</a></li>
                <li><a href="https://digitalcommons.calpoly.edu/" target="_blank" class="external">San Luis Obispo</a></li>
                <li><%= link_to "San Marcos", "catalog?f[campus_sim][]=San Marcos" %></li>
                <li><%= link_to "Sonoma", "catalog?f[campus_sim][]=Sonoma" %></li>
                <li><%= link_to "Stanislaus", "catalog?f[campus_sim][]=Stanislaus" %></li>
