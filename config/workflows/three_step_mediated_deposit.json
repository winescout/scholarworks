{
    "workflows": [
        {
            "name": "three_step_mediated_deposit",
            "label": "Three-step mediated deposit workflow",
            "description": "A multi-step workflow for mediated deposit in which all deposits must be approved by reviewers. Reviewers may also send deposits back to the depositor.",
            "allows_access_grant": false,
            "actions": [
                {
                    "name": "deposit",
                    "from_states": [],
                    "transition_to": "pending_review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject"
                    ]
                }, {
                    "name": "request_changes",
                    "from_states": [{"names": ["deposited", "pending_review"], "roles": ["approving"]}],
                    "transition_to": "changes_required",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject",
                        "Hyrax::Workflow::GrantEditToDepositor"
                    ]
                },{
                    "name": "request_changes_2",
                    "from_states": [{"names": ["pending_review_2"], "roles": ["approving"]}],
                    "transition_to": "changes_required_2",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject",
                        "Hyrax::Workflow::GrantEditToDepositor"
                    ]
                },{
                    "name": "request_changes_3",
                    "from_states": [{"names": ["pending_review_3"], "roles": ["approving"]}],
                    "transition_to": "changes_required_3",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject",
                        "Hyrax::Workflow::GrantEditToDepositor"
                    ]
                },{
                    "name": "approve",
                    "from_states": [{"names": ["pending_review"], "roles": ["approving"]}],
                    "transition_to": "pending_review_2",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::DepositedNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::GrantReadToDepositor",
                        "Hyrax::Workflow::RevokeEditFromDepositor",
                        "Hyrax::Workflow::ActivateObject"
                    ]
                }, {
                    "name": "approve_2",
                    "from_states": [{"names": ["pending_review_2"], "roles": ["approving"]}],
                    "transition_to": "pending_review_3",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::DepositedNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::GrantReadToDepositor",
                        "Hyrax::Workflow::RevokeEditFromDepositor",
                        "Hyrax::Workflow::ActivateObject"
                    ]
                },{
                    "name": "approve_3",
                    "from_states": [{"names": ["pending_review_3"], "roles": ["approving"]}],
                    "transition_to": "depositing",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::DepositedNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::GrantReadToDepositor",
                        "Hyrax::Workflow::RevokeEditFromDepositor",
                        "Hyrax::Workflow::ActivateObject"
                    ]
                }, {
                    "name": "request_review",
                    "from_states": [{"names": ["changes_required"], "roles": ["depositing"]}],
                    "transition_to": "pending_review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ]
                }, {
                    "name": "request_review_2",
                    "from_states": [{"names": ["changes_required_2"], "roles": ["depositing"]}],
                    "transition_to": "pending_review_2",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ]
                },{
                    "name": "request_review_3",
                    "from_states": [{"names": ["changes_required_3"], "roles": ["depositing"]}],
                    "transition_to": "pending_review_3",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ]
                }, {
                    "name": "comment_only",
                    "from_states": [
                        { "names": ["pending_review", "pending_review_2", "pending_review_3"], "roles": ["approving"] },
                        { "names": ["changes_required", "changes_required_2", "changes_required_3"], "roles": ["depositing"] }
                    ]
                }
            ]
        }
    ]
}
